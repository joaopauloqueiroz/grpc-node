{
  "compilerOptions": {
    "target": "ES2021",
    "sourceMap": true,
    "module": "CommonJS",
    "baseUrl": "src",
    "paths": {
      "src/*": ["*"]
    },
    "types": ["@types/node"],
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src", 
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
